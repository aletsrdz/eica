<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenedor_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/mainBottomNavigatorInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector_tabs"
        app:itemTextColor="@drawable/selector_tabs"
        app:menu="@menu/bottom_inicio_nav_menu"></android.support.design.widget.BottomNavigationView>


    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPagerInicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainBottomNavigatorInicio"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"></android.support.v4.view.ViewPager>


</RelativeLayout>